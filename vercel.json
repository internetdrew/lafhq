{
  "version": 2,
  "builds": [
    { "src": "server/api/index.ts", "use": "@vercel/node" },
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": { "distDir": "dist" }
    }
  ],
  "routes": [
    { "source": "/api/(.*)", "dest": "/server/api/index.ts" },
    { "source": "/(.*)", "dest": "/index.html" }
  ]
}
